function integer LOGRU;
	input integer value;
	input integer base;
	integer temp;
begin
	temp = value-1;
	for (LOGRU=0; temp>0; LOGRU=LOGRU+1)
		temp = temp/base;
end
endfunction

function integer LOG2RU;
	input integer value;
begin
	LOG2RU = LOGRU(value,2);
end
endfunction

function integer LOGRU_MIN1;
	input integer value;
	input integer base;
begin
	LOGRU_MIN1 = LOGRU(value,base);
	if(LOGRU_MIN1==0)
		LOGRU_MIN1 = 1;
end
endfunction

function integer LOG2RU_MIN1;
	input integer value;
begin
	LOG2RU_MIN1 = LOGRU_MIN1(value,2);
end
endfunction

